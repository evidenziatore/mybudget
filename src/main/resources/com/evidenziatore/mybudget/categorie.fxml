<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Label?>
<VBox spacing="5.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.evidenziatore.mybudget.controller.ControllerCategorie">
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>
    <Label styleClass="labelPiccolaGrossettoNera" text="In questa sezione potrai gestire tutte le tue categorie (es. cibo) attraverso le apposite funzionalita'" />

    <TableView fx:id="tableViewCategorie">
        <columns>
            <TableColumn fx:id="colId" prefWidth="140.0" text="ID" />
            <TableColumn fx:id="colValore" prefWidth="140.0" text="Categoria" />
            <TableColumn fx:id="colImportanza" prefWidth="140.0" text="Importanza" />
            <TableColumn fx:id="colAzioni" prefWidth="180.0" text="Azioni" />
        </columns>
    </TableView>
    <Button mnemonicParsing="false" styleClass="buttonConfermaVerde" text="Aggiungi" />

</VBox>
