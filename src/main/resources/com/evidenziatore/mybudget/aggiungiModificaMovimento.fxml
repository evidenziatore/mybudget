<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="5.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.evidenziatore.mybudget.controller.ControllerAggiungiModificaMovimenti">
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>
   <HBox spacing="5.0">
      <VBox.margin>
         <Insets bottom="20.0" />
      </VBox.margin>
      <children>
         <VBox>
            <children>
               <HBox spacing="5.0">
                  <children>
                     <VBox>
                        <children>
                           <Label text="Prodotto" />
                           <ComboBox fx:id="comboBoxProdotto" minWidth="200.0" />
                        </children>
                     </VBox>
                     <VBox>
                        <children>
                           <Label text="Tipologia" />
                           <ComboBox fx:id="comboBoxTipologia" minWidth="200.0" />
                        </children>
                     </VBox>
                     <VBox>
                        <children>
                           <Label text="Categoria" />
                           <ComboBox fx:id="comboBoxCategoria" minWidth="200.0" />
                        </children>
                     </VBox>
                     <VBox>
                        <children>
                           <Label text="Provenienza" />
                           <ComboBox fx:id="comboBoxProvenienza" minWidth="200.0" />
                        </children>
                     </VBox>
                  </children>
                  <VBox.margin>
                     <Insets bottom="20.0" />
                  </VBox.margin>
               </HBox>
               <HBox spacing="5.0">
                  <children>
                     <VBox>
                        <children>
                           <Label text="Data" />
                           <DatePicker fx:id="datePickerData" minWidth="200.0" />
                        </children>
                     </VBox>
                     <VBox>
                        <children>
                           <Label text="Valutazione" />
                           <TextField fx:id="textFieldValutazione" minWidth="200.0" />
                        </children>
                     </VBox>
                     <VBox>
                        <children>
                           <Label text="Valore" />
                           <TextField fx:id="textFieldValore" minWidth="200.0" />
                        </children>
                     </VBox>
                  </children>
                  <VBox.margin>
                     <Insets bottom="20.0" />
                  </VBox.margin>
               </HBox>
            </children>
         </VBox>
      </children>
   </HBox>
   <HBox nodeOrientation="RIGHT_TO_LEFT" spacing="5.0">
      <Button fx:id="buttonAnnulla" mnemonicParsing="false" text="Annulla" />
      <Button fx:id="buttonConferma" mnemonicParsing="false" />
   </HBox>
</VBox>
