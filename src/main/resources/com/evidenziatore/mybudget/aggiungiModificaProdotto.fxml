<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="5.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.evidenziatore.mybudget.controller.ControllerAggiungiModificaProdotti">
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>
   <HBox spacing="5.0">
      <children>
         <VBox>
            <children>
               <Label text="Prodotto" />
               <TextField fx:id="textFieldProdotto" minWidth="200.0" />
            </children>
         </VBox>
         <VBox>
            <children>
               <Label text="Peso" />
               <TextField fx:id="textFieldPeso" minWidth="200.0" />
            </children>
         </VBox>
      </children>
      <VBox.margin>
         <Insets bottom="20.0" />
      </VBox.margin>
   </HBox>
    <HBox nodeOrientation="RIGHT_TO_LEFT" spacing="5.0">
        <Button fx:id="buttonAnnulla" mnemonicParsing="false" text="Annulla" />
        <Button fx:id="buttonConferma" mnemonicParsing="false" />
    </HBox>
</VBox>
