<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<VBox spacing="5.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.evidenziatore.mybudget.controller.ControllerMovimenti">
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>
    <Button mnemonicParsing="false" styleClass="buttonConfermaVerde" text="Aggiungi" />

    <TableView fx:id="tableViewMovimenti">
        <columns>
            <TableColumn fx:id="colId" text="ID" />
            <TableColumn fx:id="colProdotto" text="Prodotto" />
            <TableColumn fx:id="colData" text="Data" />
            <TableColumn fx:id="colTipologia" text="Tipologia" />
            <TableColumn fx:id="colCategoria" text="Categoria" />
            <TableColumn fx:id="colProvenienza" text="Provenienza" />
            <TableColumn fx:id="colImportanza" text="Importanza" />
            <TableColumn fx:id="colAzioni" text="Azioni" />
        </columns>
    </TableView>

</VBox>
